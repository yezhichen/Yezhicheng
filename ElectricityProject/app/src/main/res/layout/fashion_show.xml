<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:cardCornerRadius="@dimen/dp_20"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="150dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fashion_img"
                android:layout_width="100dp"
                android:layout_height="120dp"
                app:placeholderImage="@drawable/aa" />

            <TextView
                android:id="@+id/fashion_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/fashion_img"
                android:singleLine="true"
                android:text="fdsdfsf" />

            <TextView
                android:id="@+id/fashion_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fashion_title"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/fashion_img"
                android:text="sfddfs"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>