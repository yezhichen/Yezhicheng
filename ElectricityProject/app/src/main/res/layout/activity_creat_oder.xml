<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_340"
        android:layout_height="wrap_content"
        android:background="@drawable/sha"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200">

            <TextView
                android:id="@+id/add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李大嘴"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/add_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="323434" />

            <TextView
                android:id="@+id/add_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_name"
                android:layout_marginTop="@dimen/dp_5"
                android:text="是大V发GV道森股份十一点覆盖有合适的返回是大V发多少第三方第三方" />

            <View
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_2"
                android:layout_below="@id/add_address"
                android:layout_centerHorizontal="true"
                android:background="#BBBBBB" />

            <CheckBox
                android:id="@+id/add_moren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_address"
                android:text="设为默认地址"
                android:textSize="@dimen/sp_12" />

            <Button
                android:id="@+id/add_delete"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/add_address"
                android:layout_alignParentRight="true"
                android:text="删除" />

            <Button
                android:id="@+id/add_updata"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/add_address"
                android:layout_toLeftOf="@id/add_delete"
                android:text="修改" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shop"
        app:cardCornerRadius="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/oder_img"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_toRightOf="@id/check"
                app:placeholderImage="@drawable/aa" />

            <TextView
                android:id="@+id/oder_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/oder_img"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/oder_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/oder_title"
                android:layout_marginTop="@dimen/dp_45"
                android:layout_toRightOf="@id/oder_img"
                android:text="ddsdsdsd"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>